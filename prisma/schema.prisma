datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-py"
}

model User {
  id        String @id @default(uuid())
  email     String @unique
  name      String
  password  String
  drafts    Draft[]
  createdAt DateTime @default(now())
}

model Draft {
  id        String   @id @default(uuid())
  title     String
  content   String
  mode      String   // story | poetry | etc.
  style     String
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  createdAt DateTime @default(now())
}